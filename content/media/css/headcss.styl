
/* the absolute minimal CSS reset. works on 97% of the cases */

* {
    vertical-align: baseline;
    font-weight: inherit;
    font-family: inherit;
    font-style: inherit;
    text-decoration:inherit;
    font-size: 100%;
    padding: 0;
    border: 0;
    margin: 0;
}

table {
    border-collapse: collapse;
}

:focus {
    outline: 0;
}

::-moz-focus-inner {
    border: 0;
}

/* Bring back the most obvious defaults after CSS reset */

body {
    font:14px sans-serif;
    line-height:1.22;
}

/* HTML5 elements */
article, aside, details, footer, header, hgroup, mark, menu, nav, section {
    display:block;
}

/* bolded */
strong, b, dt { font-weight: bold; }

/* italic */
em, i, caption { font-style:italic; }

/* highlighted */
mark    { background-color: #ff0; }

/* code */
pre, code {
    font-family:"courier new",monospace;
}

/* margin for block level elements */
p, table, ul, ol, hr, dd {
    margin:1em 0;
}

li {
    margin-left:2em;
}

blockquote {
    margin:2em;
}

/* horizontal rule */
hr {
    border:1px solid #ddd;
    border-width:1px 0 0;
}

/* tables */
td, th {
    padding:.3em .5em .3em .4em;
}

th {
    font-weight: bold;
    text-align:left;
}

/* make forms look sane */

input, select, textarea {
    font-size:99%;
    padding:0.2em;
    border:1px solid;
    border-color:#ccc #eee #eee #ccc;
}

input[type="checkbox"], input[type="radio"] {
    vertical-align: text-top;
    border:0;
}

label {
    cursor:pointer;
}

textarea {
    width:100%;
}

select {
    background-color:#fff;
}

button, input[type="button"] {
    padding:.2em .5em;
    border:1px outset #ddd;
    cursor:pointer;
}

button:active, input[type="button"]:active {
    border:1px inset #ddd;
}
/* common best practices in typography */

h1,h2,h3,h4,h5,h6,dt {
    margin:1.5em 0 -0.5em 0;
}

h1 {
    font-size: 2.2em;
    line-height: 1.1;
}

h2 {
    font-size: 1.8em;
    line-height: 1.15;
}

h3 {
    font-size: 1.5em;
    line-height: 1.2;
}

h4, h5, h6 {
    font-weight:bold;
}

/*
    Example naming scheme. Not just for typography:

    .box.loud {
        font-weight:bold;
        .gradient;
    }

    Thanks: blueprintcss.org
*/

.large          { font-size: 1.3em; line-height:1.3; }
.small,small    { font-size: 0.8em; }
.hidden         { display: none; }

.loud           { color: #111; }
.quiet          { color: #777; }

.dark               { background-color: #333; color: #fff; }
.dark a             { color: #ceff00; }
.light          { background-color: #f9f9f9; }

.top            { margin-top:0 !important; }
.bottom         { margin-bottom:0 !important; }


/* floats */
.left               { float:left; }
.right          { float:right; }

.first          { margin-left:0 !important; }
.last           { margin-right:0 !important; }


/* clearfix */
.clear:after {
    content: ".";
    display: block;
    clear: both;
    visibility: hidden;
    line-height: 0;
    height: 0;
}

.clear {
    display: block;
}


* html .clear {
    height: 1%;
}


/* Cross browser CSS3 */
box-shadow(size = 5px, color = rgba(0,0,0,.2))
    -moz-box-shadow 0 0 size color
    -webkit-box-shadow 0 0 size color


border-radius()
    -webkit-border-radius arguments
    -moz-border-radius arguments
    border-radius arguments


gradient(from = #f9f9f9, to = #ddd)
    background-color from
    background-image -moz-linear-gradient(from, to)
    background-image -webkit-gradient(linear, 0 0, 0 100%, from(from), to(to))

/* rounded borders for inputs */
input, select, textarea
    border-radius 2px


/* cute button */
button
    font-weight bold
    padding .2em 1em
    text-shadow 0 1px 1px #fff
    border-radius 11px
    gradient #fff, #ddd

    &:active
        box-shadow 3px, #0066FF
